---
import Layout from '../../Base.astro';
import BlogArchiveSidebar from '../../components/BlogArchiveSidebar.astro';
import Tease from '../../components/Tease.astro';

export async function getStaticPaths() {
	const response = await fetch(`${import.meta.env.PUBLIC_WP_URL}/categories?per_page=100`);
	const posts = await response.json();
	return posts.map((category) => {
		return {
			params: { category: category.slug },
			props: {
				title: category.name,
				slug: category.slug,
				id: category.id
			}
		};
	});
}

const { title, slug, id } = Astro.props;

const title2 = `The Kelp Blog: ${title}`;
const requestPosts = await fetch(`${import.meta.env.PUBLIC_WP_URL}/posts?per_page=100&categories=${id}`);
const posts = await requestPosts.json();
---

<Layout title={title2} darkHeader={true} bodyClass='blog-archive'>
	<article class='wrapper archive'>
		<BlogArchiveSidebar />
		{posts.map((post) => <Tease post={post} />)}
	</article>
</Layout>

<style lang='scss' is:global>
	.archive {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		@media (max-width: 1300px) {
			grid-template-columns: 1fr 1fr;
		}
		@media (max-width: 890px) {
			grid-template-columns: 1fr;
		}
		gap: 3rem;
		padding-bottom: 5rem;
		margin-top: 5rem !important;
		&-sidebar {
			@media (min-width: 891px) {
				grid-row: 1 / span 2;
			}
			padding-top: 2rem;
			svg {
				max-width: 100%;
				height: auto;
			}
			h3 {
				border-top: 2px solid var(--green);
				padding-top: 2rem;
				margin-top: 2rem;
			}
			ul {
				position: sticky;
				top: 2rem;
				list-style: none;
				margin: 0;
				padding: 0;
				a {
					text-decoration: none;
					text-decoration-thickness: 3px;
					&.active {
						color: var(--purple);
					}
					&:hover,
					&:focus {
						text-decoration: underline;
					}
				}
			}
		}
		&-tease {
			position: relative;
			.media {
				aspect-ratio: 4 / 2.2;
				overflow: hidden;
				display: block;
				picture,
				img {
					height: 100% !important;
					width: 100% !important;
					object-fit: cover;
					max-width: none !important;
				}
			}
			.text {
				a {
					text-decoration: none;
					&:after {
						content: '';
						position: absolute;
						top: 0;
						left: 0;
						width: 100%;
						height: 100%;
						z-index: 2;
					}
				}
				&-meta {
					text-transform: uppercase;
					font-family: var(--sans-serif);
					font-size: 14px;
					line-height: 1.2;
					opacity: 0.5;
					margin-top: 1.5rem;
					span + span {
						border-left: 1px solid;
						margin-left: 0.5rem;
						padding-left: 0.7rem;
					}
				}
			}
			&:first-of-type {
				@media (min-width: 1301px) {
					grid-column: 2 / span 2;
				}
			}
			&:nth-of-type(4n + 1) {
				.lg-reveal--layer-to-right:after {
					background-color: var(--light-purple);
				}
			}
			&:nth-of-type(4n + 2) {
				.lg-reveal--layer-to-right:after {
					background-color: var(--green);
				}
			}
			&:nth-of-type(4n + 3) {
				.lg-reveal--layer-to-right:after {
					background-color: var(--purple);
				}
			}
			&:nth-of-type(4n + 4) {
				.lg-reveal--layer-to-right:after {
					background-color: var(--red);
				}
			}
		}
	}
</style>
