  </div>

  <div class="culture-media" data-lg-reveal="layer-to-left">
    <Picture
      src={cultureWorkspace}
      alt="Bright office workspace with desk and chair"
      loading="lazy"
      decoding="async"
      widths={[480, 720, 960, 1200]}
