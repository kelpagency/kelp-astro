      loading="lazy"
      decoding="async"
      widths={[480, 720, 960, 1200]}
      sizes="(max-width: 900px) 100vw, 50vw"
      inferSize
    />
  </div>
</div>

<style lang="scss">
  .culture {
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    gap: 8rem 15%;
    margin: 12rem auto;
    position: relative;
    grid-auto-flow: dense;
    @media (max-width: 767px) {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    &::after {
      content: '';
      position: absolute;
      left: 50%;
      width: 1px;
      height: 100%;
      background: #707070;
      transform-origin: top center;
      @media (max-width: 767px) {
        display: none;
      }
    }
    h2 {
      font-size: var(--step-7);
      margin-bottom: 4rem;
    }
    &-text {
      grid-column: 1;
      /* Flip text on alternating rows */
      &:nth-child(4n-1) {
        @media (min-width: 768px) {
          grid-column: 2;
        }
      }
    }

    &-media {
      text-align: center;
      @media (min-width: 768px) {
        grid-column: 2;
      }
      /* Flip media on alternating rows */
      &:nth-child(4n) {
        grid-column: 1;
      }
    }
  }
</style>
